<div class="row profile-show">
  <div class="col-md-3">
    <div class="mb-4 p-4 pill">
      <div class="d-flex justify-content-center">
        <div class="align-items-center justify-content-center text-center">
          <img src="<%= gravatar_url @profile.user, 200 %>" class="rounded-circle img-fluid" width="100" height="100" alt="<%= @profile.user.full_name %> picture" /><br>
          <strong><%= @profile.user.full_name %></strong><br>
          <span><%= @profile.job_title %></span>
          <span><%= "from #{location(@profile.location)}" unless @profile.location.blank? %></span>

          <hr>
          <strong>Languages Spoken</strong><br>
          <%= languages(@profile.languages_spoken) %>

          <hr>
          <strong>Operating Countries</strong><br>
          <%= countries(@profile.operating_countries) %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <div class="row">
      <div class="col venture-name">
        <div class="mb-3">
          <h5><%= @profile.company_name %></h5>
        </div>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col">
        <div class="pill venture-data p-3">
          <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-2 text-center">
              <span class="value"><%= venture_founded(@profile.venture_founded) %></span>
              <span class="type">Founded</span>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-2 text-center">
              <span class="value"><%= venture_stage(@profile.venture_stage) %></span>
              <span class="type">Stage</span>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-2 text-center">
              <span class="value"><%= team_size(@profile.team_size) %></span>
              <span class="type">Employees</span>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-2 text-center">
              <span class="value"><%= industry(@profile.industry) %></span>
              <span class="type">Industry</span>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-2 text-center">
              <span class="value"><%= sdg(@profile.sdg_goal) %></span>
              <span class="type">SDG</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="pill venture-content p-3">
          <%= @profile.venture_description %>
        </div>
      </div>
    </div>
  </div>
</div>