<h5 class="pt-5 pb-2">Tell us more about your venture</h5>

<div class="field">
  <%= f.label :company_name, class: "sr-only" %>
  <%= f.text_field :company_name, placeholder: "Venture Name", class: "form-control" %>
</div>

<div class="field">
  <%= f.label :company_website_url, class: "sr-only" %>
  <%= f.text_field :company_website_url, placeholder: "venture website URL", class: "form-control" %>
</div>

<div class="field">
  <%= f.label :venture_founded, class: "sr-only" %>
  <%= f.text_field :venture_founded, placeholder: "Venture Founding Year", class: "form-control" %>
</div>

<div class="field">
  <%= f.label :venture_description, class: "sr-only" %>
  <%= f.text_area :venture_description, placeholder: "Tell us about your venture", rows: 5, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :team_size, "Team Size", class: "sr-only" %>
  <%= f.select :team_size, options_from_collection_for_select(UserProfile.team_sizes, :first, :last, selected: @profile.team_size), {include_blank: "--- Team Size ---"}, {class: "form-control" } %>
</div>

<div class="form-group">
  <%= f.label :operating_countries, "Operating Countries", class: "text-muted" %>
  <%= f.country_select :operating_countries, {}, {multiple: true, size: 5, class: "form-control" } %>
</div>
