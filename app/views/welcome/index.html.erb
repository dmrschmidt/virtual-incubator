<div class="row">
  <div class="col-3">
    <img src="/img/<%= current_user.role %>.jpg" class="rounded-circle" width="150" height="150" />
    <h4 class="mt-4">Hello <%= current_user.first_name %>!</h4>
    <a href="#">edit your profile</a>
  </div>

  <div class="col-9">
    <h2>Help mentees with their problems</h2>
    <div class="questions-counter"><%= @questions.count %> Questions</div>

    <% @questions.each do |question| %>
      <div class="question mb-4 p-2">
        <div class="row">
          <div class="col-2">
            <img src="/img/<%= question.user.role %>.jpg" class="rounded-circle" width="50" height="50" />
            <%= question.user.first_name %>
          </div>
          <div class="col-10">
            <strong><%= question.title %></strong><br />
            <%= truncate(question.text, length: 50) %><br />
            <%= link_to 'Find out more', question %><br />
            <% question.tags.each do |tag| %>
              <span class="badge badge-pill badge-primary"><%= tag %></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
