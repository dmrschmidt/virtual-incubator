<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "new_user") do |f| %>
    <img class="mb-4" src="/img/logo.svg" alt="" width="100" height="100">

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
