<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "new_user") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <img class="mb-4" src="/img/logo.svg" alt="" width="100" height="100">

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control initial" %>

    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control confirmation" %>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
