<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "new_user pill p-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2 class="mb-4">Sign up</h2>

    <%= f.label :full_name, class: "sr-only" %>
    <%= f.text_field :full_name, autofocus: true, autocomplete: "name", placeholder: "Full name", class: "form-control" %>

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email address", class: "form-control" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control initial" %>

    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control confirmation" %>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>

</div>
